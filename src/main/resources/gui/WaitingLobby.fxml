<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox fx:id="vbox"  stylesheets="@CenteredWindow.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
      <AnchorPane fx:id="anchor" minHeight="-Infinity" maxHeight="-Infinity" maxWidth="-Infinity" minWidth="-Infinity">
         <children>
            <TextField onKeyReleased="#enterSendMessage" fx:id="message" layoutX="83.0" layoutY="276.0" prefHeight="26.0" prefWidth="439.0" promptText="Message" />
            <Text layoutX="246.0" layoutY="47.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Lobby">
               <font>
                  <Font name="SF Mono Bold" size="35.0" />
               </font>
            </Text>
            <TextArea fx:id="lobbyChat" layoutX="81.0" layoutY="106.0" prefHeight="156.0" prefWidth="439.0" />
            <Text layoutX="81.0" layoutY="95.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Chat:">
               <font>
                  <Font name="SF Mono Regular" size="15.0" />
               </font>
            </Text>
         <Button fx:id="startButton" layoutX="300.0" layoutY="319.0" mnemonicParsing="false" onAction="#startMatch" style="-fx-background-color: #49be25;" text="Start Match" />
            <Button layoutX="197.0" layoutY="319.0" mnemonicParsing="false" onAction="#sendMessage" style="-fx-background-color: #49be25;" text="Send Message" />
         <CheckBox fx:id="checkBox" layoutX="393.0" layoutY="323.0" mnemonicParsing="false" prefHeight="18.0" prefWidth="125.0" text="Erase old matches">
            <font>
               <Font size="11.0" />
            </font>
         </CheckBox>

         </children>
      </AnchorPane>
</VBox>
